<% if @invitation.message.blank? -%>
  <%= t('mail.invite_user.body', 
        :inviter => @invitation.inviter.username, 
        :group => @invitation.group.name,
        :registration_link => @link) %>
<%- else -%>
  <%= t('mail.invite_user.body_with_message',
        :inviter => @invitation.inviter.username,
        :group => @invitation.group.name,
        :message => @invitation.message,
        :registration_link => @link) %>
<%- end -%>
