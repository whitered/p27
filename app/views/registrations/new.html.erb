<h2><%= t('devise.registrations.new.title') %></h2>

<%= semantic_form_for(resource, :url => registration_path(resource_name)) do |form| %>
  <%= form.inputs do %>
    <%= form.input :username %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.input :password_confirmation, :required => true %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => t('devise.registrations.new.submit') %>
  <% end %>
<% end %>
