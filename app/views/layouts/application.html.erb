<!DOCTYPE html>
<html>
<head>
  <title>P27</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <% unless flash.empty? %>
    <div id="notifications">
      <%= content_tag(:div, flash[:notice], :class => 'notice') if flash[:notice] %>
      <%= content_tag(:div, flash[:alert], :class => 'alert') if flash[:alert] %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
