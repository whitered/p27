<p><%= @group.name %></p>

<ul id="group_users">
  <%= @group.users.each do |user| %>
    <li><%= link_to user.username, user_path(user.username), :class => (@group.user_is_admin?(user) ? 'admin' : nil) %></li>
  <% end %>
</ul>

<%= render 'groups/add_user_form' if @group.user_is_admin?(current_user) %>
